{
  "name": "hyperapp-starter",
  "version": "1.0.0",
  "description": "starter project for hyperapp",
  "keywords": [
    "koa",
    "webpack",
    "hot module replacement",
    "hmr",
    "async",
    "boilerplate",
    "es6",
    "hyperapp",
    "ssr"
  ],
  "scripts": {
    "clean": "rm -rf .build/ && mkdir .build/",
    "build:client": "webpack --config webpack.client.js",
    "build:server": "webpack --config webpack.server.js",
    "build": "npm run clean && npm run build:server && npm run build:client",
    "start": "npm run build && node .build/server.js",
    "test": "mocha",
    "lint": "eslint --ext .js,.html src/",
    "lint:fix": "eslint --fix --ext .js,.html src/"
  },
  "main": "src/index.js",
  "author": "Andy Johnson <andyrjohnson82@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "hyperapp": "^0.11.0",
    "koa": "^2.3.0",
    "koa-static-server": "^1.3.2",
    "undom": "^0.3.3"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-syntax-flow": "^6.18.0",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-1": "^6.24.1",
    "compression-webpack-plugin": "^1.0.0",
    "eslint": "^4.4.1",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-lodash-fp": "^2.1.3",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.2.0",
    "eslint-plugin-smells": "^1.0.1",
    "eslint-plugin-standard": "^3.0.1",
    "extract-text-webpack-plugin": "^3.0.0",
    "flow-bin": "^0.52.0",
    "hyperapp-redux-devtools": "^1.0.5",
    "hyperapp-webpack-hmr": "^1.0.3",
    "koa-webpack-dev-middleware": "^2.0.1",
    "koa-webpack-hot-middleware": "^1.0.3",
    "mocha": "^3.5.0",
    "nsp": "^2.7.0",
    "nyc": "^11.1.0",
    "purifycss-webpack-plugin": "^2.0.3",
    "redux": "^3.7.2",
    "redux-devtools-extension": "^2.13.2",
    "retire": "^1.3.3",
    "sinon": "^3.2.0",
    "start-server-webpack-plugin": "^2.2.0",
    "webpack": "^3.5.4",
    "webpack-bundle-analyzer": "^2.9.0",
    "webpack-dev-server": "^2.7.1",
    "webpack-node-externals": "^1.6.0"
  }
}
