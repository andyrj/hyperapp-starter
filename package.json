{
  "name": "hyperapp-starter",
  "version": "1.0.0",
  "description": "starter project for hyperapp",
  "keywords": [
    "koa",
    "webpack",
    "hot module replacement",
    "hmr",
    "async",
    "boilerplate",
    "es6",
    "hyperapp",
    "ssr"
  ],
  "scripts": {
    "clean": "rm -rf .build/ && mkdir .build/",
    "build:client": "NODE_ENV=production webpack -p --config webpack.client.js",
    "build:server": "NODE_ENV=production webpack --config webpack.server.js",
    "build": "npm run clean && npm run build:server && npm run build:client",
    "format": "prettier --write \"./src/**/*.js\"",
    "analyze": "npm run clean && npm run build:server && NODE_ENV=production ANALYZE=1 webpack -p --config webpack.client.js",
    "dev": "npm run clean && webpack --config webpack.server.js --watch --hot --verbose",
    "start": "NODE_ENV=production node .build/server.js",
    "test": "mocha",
    "lint": "eslint --ext .js,.html src/",
    "lint:fix": "eslint --fix --ext .js,.html src/"
  },
  "main": "src/index.js",
  "author": "Andy Johnson <andyrjohnson82@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@hyperapp/router": "^0.0.2",
    "hyperapp": "^0.9.3",
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-convert": "^1.2.0",
    "undom": "^0.3.3"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.0",
    "babel-plugin-syntax-flow": "^6.18.0",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.5.2",
    "babel-preset-stage-1": "^6.24.1",
    "compression-webpack-plugin": "^0.4.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-plugin-import": "^2.6.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-lodash-fp": "^2.1.3",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.1.0",
    "eslint-plugin-smells": "^1.0.1",
    "eslint-plugin-standard": "^3.0.1",
    "extract-text-webpack-plugin": "^2.1.2",
    "flow-bin": "^0.48.0",
    "hyperapp-redux-devtools": "^1.0.3",
    "hyperapp-webpack-hmr": "^1.0.1",
    "jsdom": "^11.0.0",
    "koa-webpack-dev-middleware": "^1.4.6",
    "koa-webpack-hot-middleware": "^1.0.3",
    "mocha": "^3.4.2",
    "nsp": "^2.6.3",
    "nyc": "^11.0.2",
    "prettier": "^1.5.2",
    "purifycss-webpack-plugin": "^2.0.3",
    "redux": "^3.7.1",
    "redux-devtools-extension": "^2.13.2",
    "retire": "^1.3.2",
    "sinon": "^2.3.5",
    "start-server-webpack-plugin": "^2.2.0",
    "webpack": "^2.6.1",
    "webpack-bundle-analyzer": "^2.8.2",
    "webpack-dev-server": "^2.5.0",
    "webpack-node-externals": "^1.6.0"
  }
}
